{% extends 'bundles/TwigBundle/Exception/error.html.twig' %}

{% block title %}Page not found (404){% endblock %}

{% block body %}
<main class="py-5">
  <div class="container px-4 px-lg-5">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7 text-center">
        <img src="{{ asset('img/logo.png') }}" alt="SnowTricks" width="72" class="mb-4">
        <h1 class="display-5 fw-semibold mb-3">Page not found</h1>
        <p class="lead mb-4">
          The page does not exist or has been moved.
        </p>
        <div class="d-flex gap-2 justify-content-center">
          <a class="btn btn-primary btn-lg" href="{{ path('app_homepage') }}">Back to homepage</a>
        </div>
        <p class="mt-4 small text-muted">Code : 404</p>
      </div>
    </div>
  </div>
</main>
{% endblock %}